<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <style>
        /* .login-form{
            width: 40%;
            margin: auto;
        } */

        .vertical-align{
            min-height: 100%;
            min-height: 100vh;
            display: flex;
            align-items: center;
            width: 70%;
            margin: auto;
        }
    </style>
  </head>
  <body style="background-color:black">
    <div class="container">

        <div class="vertical-align">
            

            <div class="login-form">
                <div class="row p-2" style="background-color:white; border-radius:2px;">
                    <% if (locals.msg) { %>
                        <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
                            <strong><%= msg %></strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    
                    <h2 class="text-center">Edit Client</h2>
                    <div class="col align-self-center">

                        <form action="/client" method="post" enctype="multipart/form-data">
                            <input type="text" name="id" value="<%= client_details._id %>">
                            
                            <div class="mb-3">
                                <label for="name" class="form-label">Agency</label>
                                <select class="form-select" aria-label="Default select example" name="Agency">
                                    <option disabled>Select Agent</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                  </select>
                            </div>

                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="Name" value="<%= client_details.Name %>">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="text" class="form-control" id="email" name="Email" value="<%= client_details.Email %>" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="number" class="form-control" id="phone" name="PhoneNumber" value="<%= client_details.PhoneNumber %>">
                            </div>

                            <div class="mb-3">
                                <label for="TotalBill" class="form-label">TotalBill</label>
                                <input type="number" class="form-control" id="TotalBill" name="TotalBill" value="<%= client_details.TotalBill %>">
                            </div>

                            <div class="mb-3">
                                <label for="formFile" class="form-label">Default file input example</label>
                                <input class="form-control" type="file" id="formFile" name="Photo">
                            </div>


    
                            
                            
                            <button type="submit" class="btn btn-primary float-end">Update</button>
                        </form>

                    </div>
        
                </div>
            </div>
        </div>
    
        
    
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>